<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSearchedCoinResultImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/coin_place_holder"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCoinName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            style="@style/TITLE_COLOR"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Coin Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCoinPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SECONDARY_TEXT_COLOR"
                android:textSize="14sp"
                tools:text="10.000" />

            <TextView
                android:id="@+id/tvCoinPriceChangeDaily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                tools:text="+3.97" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTokenHeldAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            style="@style/SECONDARY_TEXT_COLOR"
            android:textSize="14sp"
            tools:text="Coin Held Amount" />

        <TextView
            android:id="@+id/tvTokenTotalValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            style="@style/WALLET_TOKEN_VALUE_TEXT_STYLE"
            android:textSize="14sp"
            tools:text="10.000" />
    </LinearLayout>


</LinearLayout>