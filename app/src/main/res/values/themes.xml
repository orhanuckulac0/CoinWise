<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#EDF1FA</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="itemIconTint">@color/bottom_nav_item_color_light_theme</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_light_theme</item>

    </style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <style name="MyProgressDialogStyle" parent="android:Theme.Material.Dialog">
        <item name="android:windowBackground">@drawable/dialog_rounded</item>
    </style>

    <!-- for views -->
    <style name="SCREEN_BACKGROUND">
        <item name="android:background">@drawable/light_background_gradient</item>
    </style>

    <style name="TOOLBAR_THEME" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/light_background_gradient</item>
        <item name="titleTextColor">@color/light_title_text_color</item>
    </style>

    <style name="WALLET_INFO_SQUARE">
        <item name="android:background">@drawable/rounded_corner_all_around_background_white</item>
        <item name="android:layout_marginStart">75dp</item>
        <item name="android:layout_marginEnd">75dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="WALLET_RV_BACKGROUND">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SORT_TOKENS_BACKGROUND">
        <item name="android:background">@drawable/rounded_corner_background</item>
    </style>

    <style name="VIEW_VISIBILITY">
        <item name="android:visibility">gone</item>
    </style>

    <style name="DIVIDER_COLOR_SEARCH_COIN_FRAGMENT">
        <item name="background">@color/black</item>
    </style>

    <style name="BOTTOM_NAV_BACKGROUND">
        <item name="background">@color/white</item>
    </style>

    <style name="ADD_COIN_PLUS_BUTTON">
        <item name="android:src">@drawable/ic_plus_black_24</item>
    </style>

    <!-- for texts-->
    <style name="TITLE_COLOR">
        <item name="android:textColor">@color/light_title_text_color</item>
    </style>

    <style name="SECONDARY_TEXT_COLOR">
        <item name="android:textColor">@color/light_secondary_text_color</item>
    </style>

    <style name="BOLD_NORMAL">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SEARCH_COIN_ET_HINT_COLOR">
        <item name="hintTextColor">@color/search_text_color_hint</item>
    </style>

    <style name="SEARCHED_COIN_TITLE_COLOR">
        <item name="android:textColor">@color/light_title_text_color</item>
    </style>

    <!-- wallet token specific texts -->
    <style name="WALLET_TOKEN_VALUE_TEXT_STYLE">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_title_text_color</item>
    </style>

</resources>