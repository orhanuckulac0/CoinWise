<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_dark_theme</item>
        <item name="colorPrimaryVariant">@color/main_color_dark_theme</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color_dark_theme</item>
        <!-- Customize your theme here. -->
        <item name="itemIconTint">@color/bottom_nav_item_color_dark_theme</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_dark_theme</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>
    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <style name="MyProgressDialogStyle" parent="android:Theme.Material.Dialog">
        <item name="android:windowBackground">@drawable/dialog_rounded</item>
    </style>

    <!-- for views -->
    <style name="SCREEN_BACKGROUND">
        <item name="android:background">@color/main_color_dark_theme</item>
    </style>

    <style name="WALLET_INFO_SQUARE">
        <item name="android:background">@color/main_color_dark_theme</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="TOOLBAR_THEME" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/main_color_dark_theme</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="WALLET_RV_BACKGROUND">
        <item name="android:background">@color/main_color_dark_theme</item>
    </style>

    <style name="SORT_TOKENS_BACKGROUND">
        <item name="android:background">@color/main_color_dark_theme</item>
    </style>

    <style name="VIEW_VISIBILITY">
        <item name="android:visibility">visible</item>
    </style>

    <style name="DIVIDER_COLOR_SEARCH_COIN_FRAGMENT">
        <item name="background">@color/divider_color</item>
    </style>

    <style name="BOTTOM_NAV_BACKGROUND">
        <item name="background">@color/black</item>
    </style>

    <style name="ADD_COIN_PLUS_BUTTON">
        <item name="android:src">@drawable/ic_plus_white_24</item>
    </style>

    <style name="SETTINGS_SUPPORT_ICON">
        <item name="android:src">@drawable/ic_support_white_24</item>
    </style>

    <style name="SETTINGS_ABOUT_US_ICON">
        <item name="android:src">@drawable/ic_info_white_24</item>
    </style>


    <!-- for texts-->
    <style name="TITLE_COLOR">
        <item name="android:textColor">@color/tv_total_balance_color</item>
    </style>

    <style name="SECONDARY_TEXT_COLOR">
        <item name="android:textColor">@color/wallet_color_price_value_color</item>
    </style>

    <style name="BOLD_NORMAL">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SEARCH_COIN_ET_HINT_COLOR">
        <item name="hintTextColor">@color/search_text_color_hint</item>
    </style>

    <style name="SEARCHED_COIN_TITLE_COLOR">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- wallet token specific texts -->
    <style name="WALLET_TOKEN_VALUE_TEXT_STYLE">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tv_total_balance_color</item>
    </style>


</resources>